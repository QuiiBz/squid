{
  "name": "squid",
  "version": "1.0.8",
  "author": "QuiiBz",
  "productName": "Squid",
  "description": "A terminal for everyone",
  "repository": "https://github.com/QuiiBz/squid",
  "license": "MIT",
  "keywords": [
    "electron",
    "terminal",
    "squid"
  ],
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "tsc": "tsc -w",
    "start": "cross-env ELECTRON_IS_DEV=1 electron ./dist/main.js",
    "rebuild": "./node_modules/.bin/electron-rebuild.cmd",
    "pack": "electron-builder build -w",
    "cert": "electron-builder create-self-signed-cert -p QuiiBz",
    "publish:win": "electron-builder build -w -p always",
    "publish:linux": "electron-builder build -l -p always",
    "publish:mac": "electron-builder build -m -p always"
  },
  "build": {
    "appId": "fr.quiibz.squid",
    "copyright": "Copyright Â© 2020 ${author}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "ui/**/*"
    ],
    "linux": {
      "publish": [
        "github"
      ],
      "target": "AppImage",
      "category": "Utility"
    },
    "win": {
      "publish": [
        "github"
      ],
      "certificateFile": "private/QuiiBz.pfx",
      "verifyUpdateCodeSignature": false,
      "publisherName": "QuiiBz"
    }
  },
  "dependencies": {
    "@types/dragula": "^3.7.0",
    "@types/ssh2": "^0.5.40",
    "cross-env": "^7.0.0",
    "dragula": "^3.7.2",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^4.0.6",
    "electron-updater": "^4.2.5",
    "keytar": "^5.3.0",
    "md5": "^2.2.1",
    "node-gyp": "^6.1.0",
    "node-pty": "^0.9.0",
    "typescript": "^3.8.2",
    "ssh2": "^0.8.8",
    "xterm": "^4.4.0",
    "xterm-addon-fit": "^0.3.0",
    "xterm-addon-ligatures": "^0.2.1",
    "xterm-addon-web-links": "^0.2.1"
  },
  "devDependencies": {
    "electron": "^4.0.8",
    "electron-builder": "^22.3.2",
    "electron-rebuild": "^1.10.0"
  }
}
