{
  "name": "squid",
  "version": "1.0.0",
  "author": "QuiiBz",
  "productName": "Squid",
  "description": "A terminal for everyone",
  "repository": "https://github.com/QuiiBz/squid",
  "license": "MIT",
  "keywords": ["electron", "terminal", "squid"],
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "tsc": "tsc -w",
    "start": "cross-env ELECTRON_IS_DEV=1 electron ./dist/main.js",
    "rebuild": "./node_modules/.bin/electron-rebuild.cmd",
    "pack": "electron-builder build -w",
    "cert": "electron-builder create-self-signed-cert -p QuiiBz"
  },
  "build": {
    "appId": "fr.quiibz.squid",
    "copyright": "Copyright Â© 2020 ${author}",
    "directories": {
      "output": "release"
    },
    "files": ["dist/**/*", "ui/**/*"],
    "linux": {
      "publish": ["github"],
      "target": "AppImage",
      "category": "Utility"
    },
    "win": {
      "publish": ["github"],
      "certificateFile": "private/QuiiBz.pfx",
      "verifyUpdateCodeSignature": false,
      "publisherName": "QuiiBz"
    }
  },
  "dependencies": {
    "cross-env": "^7.0.0",
    "electron-is-dev": "^1.1.0",
    "node-gyp": "^6.1.0",
    "node-pty": "^0.7.0",
    "typescript": "^3.7.5",
    "windows-native-registry": "^1.0.14",
    "xterm": "^3.14.5"
  },
  "devDependencies": {
    "electron": "^4.0.8",
    "electron-builder": "^22.3.2",
    "electron-rebuild": "^1.10.0"
  }
}
