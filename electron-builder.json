{
  "publish": [
    "github"
  ],
  "appId": "com.squids.squid",
  "copyright": "Copyright Â© 2020 Squid",
  "productName": "Squid",
  "nsis": {
    "oneClick": false,
    "installerIcon": "./build/icon.ico",
 	  "allowToChangeInstallationDirectory": true
  },
  "win": {
    "icon": "build/icon.ico"
  },
  "linux": {
    "icon": "./build/icon.png",
    "category": "TerminalEmulator",
    "target": [
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ]
  },
  "mac": {
    "icon": "./build/icon.icns",
    "category": "public.app-category.developer-tools",
    "target": [
      {
        "target": "default",
        "arch": ["arm64", "x64"]
      }
    ]
  },
  "snap": {
    "publish": {
      "provider": "generic",
      "url": "https://anydummyurl.com"
    }
  }
}
